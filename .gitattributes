# Auto detect text files and perform LF normalization
* text=auto eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.ts text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows specific
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.exe binary

# Lock files
bun.lock text eol=lf
package-lock.json text eol=lf
