{
  "name": "@pikachu-metal/project-manager",
  "version": "1.0.2",
  "description": "Interactive CLI tool for managing and launching development projects",
  "author": "Àngel Delgado Fernández",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pikachumetal/project-manager.git"
  },
  "keywords": [
    "cli",
    "project-manager",
    "launcher",
    "dev-tools",
    "windows",
    "powershell"
  ],
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "project-manager": "./bin/cli.js",
    "pm": "./bin/cli.js"
  },
  "files": [
    "bin",
    "src",
    "README.md"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile bin/project-manager.exe",
    "dev": "bun run --watch src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0"
  },
  "peerDependencies": {
    "typescript": "latest"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "fast-glob": "^3.3.0",
    "picocolors": "^1.1.1",
    "zod": "^4.2.1"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  }
}
